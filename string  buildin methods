import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a string: ");
        String data = sc.nextLine();
        System.out.print("Enter an index: ");
        int index = sc.nextInt();
        sc.nextLine();

        
            int unicodeValue = data.codePointAt(index);
            char character = data.charAt(index);
           int charBeforeindex = data.codePointBefore(index);
           
            System.out.println("Unicode value at index is " + index + " is: " + unicodeValue);
            System.out.println("Character at index is " + index + " is: " + character);
            
            System.out.println("charBefore index is" + index + " is: " +charBeforeindex );
        } 
     
    }
output:


Enter a string: nithi
Enter an index: 4
Unicode value at index is 4 is: 105
Character at index is 4 is: i
charBefore index is4 is: 104



////


import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a string: ");
        String data = sc.nextLine();
        int codeCount = data.codePointCount(0, 3);
        System.out.println("Code point count is " + codeCount);

        System.out.print("Enter second string : ");
        String comparision = sc.nextLine();
        int result = data.compareTo(comparision);
        System.out.println("Comparison result is " + result);
    }
}

        

output:

Enter a string: nithi
Code point count is 3
Enter second string : nithiii
Comparison result is 2


