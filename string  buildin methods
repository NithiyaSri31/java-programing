    import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter first string: ");
        String data = sc.nextLine();
        
        System.out.print("Enter second string: ");
        String comparison = sc.nextLine();
        
        boolean result = data.contains(comparison);
        boolean result1 = data.contentEquals(comparison);
        
        System.out.println("Contains result is: " + result);
        System.out.println("Content equals result is: " + result1);
      
    }
}

output

Enter first string: hello
Enter second string: h
Contains result is: true
Content equals result is: false



