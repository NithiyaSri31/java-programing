import java.util.*;

class Main {
    public static void main(String[] args) {
      
        
        String name =String.join(" ","hello", "every one", "good morning");
        
        
         
           System.out.println(name);  
          
        System.out.println(name.lastIndexOf("every one"));
        
        System.out.println(name.length());
    }
}
