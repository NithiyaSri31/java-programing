import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter first string: ");
        String data = sc.nextLine();
        System.out.print("Enter second string: ");
        String comparison = sc.nextLine();
        boolean result = data.endsWith("hello");
        boolean result1 = data.equals(comparison);
        String result2 = String.copyValueOf(data.toCharArray());
        System.out.println("equals result is: " + result1);
        System.out.println("ends with result is: " + result);
        System.out.println("copy value of result is: " + result2);
        
    }
}


output:

Enter first string: hello
Enter second string: hii
equals result is: false
ends with result is: true
copy value of result is: hello



///



import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter first string: ");
        String data = sc.nextLine();
        System.out.print("Enter second string: ");
        String comparison = sc.nextLine();
        boolean equalsIgnoreCaseResult = data.equalsIgnoreCase(comparison);
        
        String result = String.format(" format result: %b", equalsIgnoreCaseResult);
        System.out.println(result);
         System.out.println("Ignore case result:" + equalsIgnoreCaseResult);
    }
}


output:

Enter first string: hii
Enter second string: hello
 format result: false
Ignore case result:false



